---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import UnderButton from '../components/UnderButton.astro';
import Table from '../components/Table.astro';

const services = [
  { name: '💻 GitHub', link: 'https://github.com/ultrageopro', username: 'ultrageopro' },
  { name: '🛩️ Telegram', link: 'https://t.me/UltraGeoDev', 'username': '@UltraGeoDev' },
  { name: '📧 Mail', link: 'mailto:dev@ultrageopro.ru', 'username': 'dev@ultrageopro.ru' },
  { name: '📖 Habr', link: 'https://habr.com/ru/users/ultrageopro1966', 'username': 'ultrageopro1966' },
];
---

<Layout title="UltraGeoSite - Contacts" description="This is the contacts page. Thank you for being with me when I am alone.">
    <main class="mx-auto p-4 text-white leading-relaxed">
      <Table title="🫂 My Contacts" services={services} />
      <UnderButton text="To the very beginning *click*" href="/" />
</Layout>

<style>
    main {
	  padding: 1rem;
	  width: clamp(1200px, 80%, 800px);
	  max-width: 100%;
	  color: white;
	  font-size: clamp(16px, 2vw + 1rem, 20px);
	  line-height: 1.6;
	}
</style>